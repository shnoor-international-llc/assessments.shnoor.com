# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
DB_USER=your_postgres_username
DB_HOST=localhost
DB_NAME=exam_portal
DB_PASSWORD=your_postgres_password
DB_PORT=5432
DB_POOL_MAX=100

# Redis Configuration (for caching and session management)
# For native Redis installations: redis://localhost:6379
# For WSL Redis: Get your WSL IP with 'wsl hostname -I' and use redis://YOUR_WSL_IP:6379
# Example: redis://172.27.127.40:6379
REDIS_URL=redis://localhost:6379

# Firebase Configuration
# Download your Firebase service account JSON file from Firebase Console
# and place it in the backend folder as 'serviceAccountKey.json'
# Or provide the path here:
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# CORS Configuration (Your React Frontend URL)
CLIENT_URL=http://localhost:5173

# Proctoring Configuration (Sample-Based Monitoring)
PROCTORING_SAMPLE_RATE=0.15        # 15% of students monitored (0.10 = 10%, 0.20 = 20%)
PROCTORING_FRAME_RATE=2            # Frames per second (2 FPS recommended)
PROCTORING_ROTATION_MINUTES=5      # Rotate monitored students every N minutes
